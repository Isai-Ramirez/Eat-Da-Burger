<h1>Burgers!</h1>


<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>


<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">submit</button>
<h2>Enter a burger you want to eat! Click the "submit" button.</h2>
</form>



<li>
	{{name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
		{{#if sleep}}Devour it!{{/if}}
	</button>

	
</li>

